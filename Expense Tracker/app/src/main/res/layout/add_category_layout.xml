<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/transaction_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_details"
            android:textColor="@color/blackish_txt"
            android:textSize="22sp"
            android:paddingStart="10dp"
            android:fontFamily="@font/poppins_medium" />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/transaction_details"
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:elevation="8dp"
        android:background="@drawable/bg_6"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="40dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <RelativeLayout
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/white"
                android:paddingTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                />


            <RelativeLayout
                android:layout_below="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:background="@drawable/bg_15"
                >

                <io.github.ketzalv.validationedittext.ValidationEditText
                    android:id="@+id/edit_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="top"
                    android:hint="@string/category_name"
                    android:textColorHint="@color/transaction_note_color"
                    android:visibility="visible"
                    android:textCursorDrawable="@color/white"
                    android:paddingStart="20dp"
                    android:textColor="@color/black"
                    android:paddingTop="15dp"
                    android:paddingEnd="50dp"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"
                    android:inputType="text"
                    />


            </RelativeLayout>





        </RelativeLayout>


        <RelativeLayout
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon"
                android:textColor="@color/white"
                android:paddingTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:visibility="visible"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/txt_3"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:background="@drawable/bg_15"
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/linear_1"
                >


<!--                <View-->
<!--                    android:id="@+id/color"-->
<!--                    android:layout_width="60dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:background="@color/orange"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:visibility="gone"-->
<!--                    />-->

                <ImageView
                    android:id="@+id/cat_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/fuel"
                   android:layout_centerVertical="true"
                    />

                <ImageView
                    android:layout_gravity="end"
                    android:id="@+id/remove_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/close"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/no_icon"
                android:layout_below="@+id/txt_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_icon_selected"
                android:textColor="@color/transaction_note_color"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="50dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:visibility="gone"
                />

<!--            <View-->
<!--                android:id="@+id/horizontalLine2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:visibility="visible"-->
<!--                android:layout_below="@+id/linear_1"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                android:background="@color/white"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_marginStart="20dp" />-->

        </RelativeLayout>

        <RelativeLayout
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color"
                android:textColor="@color/white"
                android:paddingTop="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:visibility="visible"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/txt_color"
                android:paddingStart="20dp"
                android:paddingEnd="0dp"
                android:background="@drawable/bg_15"
                android:orientation="horizontal"
                android:visibility="visible"
                android:id="@+id/linear_color"
                >


                <View
                    android:id="@+id/cat_color"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    />



            </RelativeLayout>




        </RelativeLayout>


    </LinearLayout>









</RelativeLayout>
